{{- range index $.Values "workload-identity" "workloadIdentities" }}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  annotations:
    azure.workload.identity/client-id: {{ required ".clientID is required!" .clientID | quote }}
  labels:
    azure.workload.identity/use: "true"
  name:  {{ required ".name is required!" .name | quote }}
  namespace: {{ required ".namespace is required!" .namespace | quote }}
{{- end }}
